package com.google.interview.questions.problemsolving;

import java.io.File;

public class RecursiveDeleteFiles {

	public static void recursiveDelete(File file) {

		if (!file.exists()) {
			return;
		}

		if (file.isDirectory()) {
			for (File fl : file.listFiles()) {
				recursiveDelete(fl);
			}

		}

	}

}
